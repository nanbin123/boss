/* pages/jobTitle/jobTitle.wxss */
page{
  width: 100%;
  height: 100%;
}
.jobTitle{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding:  0 30rpx;

}
.jobExpectationsTitle {
  width: 100%;
  height: 200rpx;
}
.titleT{
  width: 100%;
  display: block;
  font-size: 54rpx;
  font-weight: bold;
  padding: 16rpx 0
}
.titleB{
  font-size: 30rpx;
  color: #5d5d5d
}
.input{
  width: 100%;
  height: 110rpx;
  border-bottom: 4rpx solid #dcdcdc;
}
.weui-cell{
  margin-top: 20rpx;
}
.weui-input{
  height: 100rpx;

}
.jobItem{
  display: block;
  font-size: 34rpx;
  padding: 50rpx 0 ;
  border-bottom: 4rpx solid #dcdcdc;

}
.bg {
  display: none;
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 1350rpx;
  background-color: black;
  z-index: 1001;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}
 
.show {
  display: none;
  position: absolute;
  top: 0;
  left: 20%;
  width: 73%;
  height: 100%;
  padding: 12rpx;
  border: 16rpx solid #e8e9f7;
  background-color: white;
  z-index: 1002;
  overflow: auto;
}
.menu{
  width: 100%;
    height: 100%;
  display: flex;
}
.left{
  width: 50%;
  height: 100%;
  background: #d4b3b3;
  border-right: 4rpx solid #e8e9f7;
  overflow: hidden

}
.right{
  width: 50%;
  height: 100%;
  background: #bdb2b2;
  overflow: hidden

}
.scroll{
  width: 100%;
  height: 100%;

}
.listItem{
  width: 100%;
  display: block;
  height: 100rpx;
  border-bottom: 4rpx solid #e8e9f7;
  font-size: 30rpx;
  line-height: 100rpx;
  overflow: hidden
}
.listItem1{
  width: 100%;
  display: block;
  height: 100rpx;
  border-bottom: 4rpx solid #e8e9f7;
  font-size: 30rpx;
  line-height: 100rpx;
  overflow: hidden

}